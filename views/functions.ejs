<%
  function unixConvert(unixTimestamp) {
    dateObj = new Date(unixTimestamp * 1000);
    utcString = dateObj.toUTCString();
    time = utcString.slice(-11, -4);
    return time;
  }
<%>

<!-- for homepage -->
<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Search weather of your location</h5>
      <form action="/" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="location" placeholder="Location">
        </div>
        <button type="submit" class="btn btn-primary">Go</button>
      </form>
    </div>
  </div>
</div>


<!-- for location found -->
<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Weather in <%= data.name %>, <%= data.sys.country %></h5>
      <p class="text-muted">Lat: <%= data.coord.lat %>, Lon: <%= data.coord.lon %></p>
      <img class="float-right" src="http://openweathermap.org/img/wn/<%= data.weather[0].icon %>@2x.png" alt="icon">
      <p class="display-1"><%= data.main.temp%><sup>o</sup>C</p>
      <span class="text-muted">Feels like <%= data.main.feels_like %><sup>o</sup>C</span>
      <h5 class="text-capitalize font-weight-bold"><%= data.weather[0].description %></h5>
      <span class="pr-5"><i class="fas fa-wind"></i> Wind <%= data.wind.speed %> m/sec</span>
      <span class="pr-5"><i class="fas fa-paper-plane"></i> Pressure <%= data.main.pressure %> mb</span>
      <span class="pr-5"><i class="fas fa-tint"></i> Humidity <%= data.main.humidity %>%</span>
      <span class="pr-5"><i class="fas fa-eye"></i> Visibility <%= data.visibility/1000 %> km</span>
      <span class="pr-5"><i class="fas fa-eye"></i> Cloudiness <%= data.clouds.all %>%</span>
    </div>
  </div>
</div>

<!-- for location not found -->
<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Some error occurred, please check the spelling of your location.</h5>
    </div>
  </div>
</div>